{
    "version": 8,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 28,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "toaster",
            "displayName": "Toaster",
            "generator": "Visual Studio 17 2022",
            "description": "Default Configuration for the Quantization Toaster",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "C:/Apps/Toaster",
                "LLAMA_AVX2": "TRUE",
                "LLAMA_CUDA": "TRUE"
            }
        },
        {
            "name": "cloud",
            "displayName": "Toaster (Cloud)",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build",
            "description": "Default Configuration for the Quantization Toaster on Cloud",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "/opt/toaster",
                "LLAMA_AVX2": "TRUE",
                "LLAMA_AVX512": "TRUE",
                "LLAMA_AVX512_VNNI": "TRUE",
                "LLAMA_CUDA": "TRUE"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "toastmaster",
            "displayName": "Toastmaster",
            "configurePreset": "toaster"
        },
        {
            "name": "cloudmaster",
            "displayName": "Toastmaster (Cloud)",
            "configurePreset": "cloud"
        }
    ]
}
